@{

}
@model Book
@*Div that will contain the cards for each of the books. The data is brought in dynamically through the model for each book. The book id is taken when you click on a book to populate the add view with the correct
    information.*@
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">Publisher: @Model.Publisher | ISBN: @Model.ISBN | Classification: @Model.Classification | Category: @Model.Category | Page Count: @Model.PageCount
        <form method="post" asp-page="/Add">

            <input type="hidden" asp-for="@Model.BookId"/>
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>

            <span class="card-text">
                <button type="submit" class="btn btn-success btn-sm float-end">Add Book to Cart</button>
            </span>
        </form>
    </div>
</div>
@*Style tag to change card color*@

<style>
    .card {
        transition: background-color 0.3s ease-in-out;
    }

    .card:hover {
        background-color: #000;
        transition: background-color 0.3s ease-in-out;
    }

    .card-title,
    .card-text {
        transition: color 0.3s ease-in-out;
    }

    .card:hover .card-title,
    .card:hover .card-text {
        color: #fff;
        transition: color 0.3s ease-in-out;
    }
    .card:hover h4{
        color: #fff;
    }
</style>


