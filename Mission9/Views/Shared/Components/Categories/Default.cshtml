
@{

}
@model IEnumerable<string>
@*Div to hold each of the category buttons and the home button. The categories will be brought in dynamically using the view bag. *@
<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-block btn-outline-secondary">Home</a>
    

    @foreach (string c in Model)
    {

        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedCategory == c ?  "btn-primary btn-block" : "btn-block btn-outline-secondary")">@c</a>
       
    }
    @*Style tag to make the a tags grow/shrink when you hover over them. *@
    <style>
        .btn:hover {
            transform: scale(1.05);
            transition: all 0.3s ease-in-out;
        }
    </style>
</div>