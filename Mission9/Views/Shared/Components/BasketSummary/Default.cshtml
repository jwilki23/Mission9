@*This is a view to create the cart icon that will display at the top of the screen. *@
@model Basket
<div class="">
    @*If there are items in the cart, calculate the number of items and the total cost.*@
    @if (Model.Items.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your cart:</b>
            @Model.Items.Sum(x => x.Quantity) item(s)
            @Model.CalculateTotal().ToString("c")
        </small>
    }
    @*Allow users to click on the cart to access their summary*@
    <a class="btn btn-sm btn-secondary navbar-btn" asp-page="/Add"
       asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>